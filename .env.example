# avatar-server/backend/.env.example
# URL к Ollama серверу
OLLAMA_URL=http://ollama:11434

# URL к TTS-серверу
TTS_URL=http://tts-server:5002

# Разрешённые источники для CORS (через запятую)
# Используйте * только в разработке!
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Строка подключения к PostgreSQL
DB_PATH=postgresql://avatar_user:avatar_pass@db:5432/avatar_db

# Настройки сервера (опционально)
HOST=0.0.0.0
PORT=8000

# Модель LLM по умолчанию
DEFAULT_MODEL=llama3

# Ограничение истории чата
HISTORY_LIMIT=12

# Принудительный ответ на русском языке
FORCE_RUSSIAN=true